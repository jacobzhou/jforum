<div class="box">
  <div class="cell">
    <%= build_admin_navigation(['营养师答复列表']) %>
  </div>
  <div class="cell">
    <table class="table">
      <thead>
        <tr>
          <th>序号</th>
          <th>答复用户</th>
          <th>标题</th>
          <th>时间</th>
          <th>状态</th>
          <th>操作</th>
        </tr>
      </thead>
      <% @survey_replies.each_with_index do |survey_reply, index| %>
        <tr>
          <td><%= index_no(index, @survey_replies.size) %></td>
          <td><%= survey_reply.user.nickname %></td>
          <td><%= survey_reply.title %></td>
          <td><%= survey_reply.created_at %></td>
          <td><%= survey_reply.send? ? label_tag_html("已答复", :title => "#{survey_reply.sender.nickname}于#{survey_reply.send_at}") : "待回复邮件" %></td>
          <td>
            <%= link_to "查看", admin_survey_reply_path(survey_reply) %>
            <%= link_to "答复邮件" %>
          </td>
        </tr> 
      <% end -%>
    </table>
    <div class="inner">
      <%= paginate @survey_replies %>
    </div>
  </div>
</div>