<div class="box">
  <div class="cell">
    <div class="fr">
      <%= link_to '调查问卷', admin_surveys_path, :class => "btn btn-small" %>
      <%#= admin_create_button('调查答卷', :survey_user_sheet) %>
    </div>
    <%= build_admin_navigation(['调查答卷']) %>
  </div>
  <div class="cell">
    <table class="table">
      <thead>
        <tr>
          <th>序号</th>
          <th>用户昵称</th>
          <th>EMAIL</th>
          <th>健康答卷</th>
          <th>操作</th>
        </tr>
      </thead>
      <% @users.each_with_index do |user, index| %>
        <tr>
          <td><%= index_no(index, @users.size) %></td>
          <td><%= user_profile_link(user, :class => :black) %>
          </td>
          <td><%= user.email %></td>
          <td>
            <% user.survey_user_sheets.each do |sheet| %>
              <p><%= sheet.survey.name %></p>
            <% end -%>
          </td>
          <td></td>
        </tr> 
      <% end -%>
    </table>
    <div class="inner">
      <%= paginate @users %>
    </div>
  </div>
</div>