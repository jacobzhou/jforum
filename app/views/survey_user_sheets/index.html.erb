<div class="box">
  <div class="cell">
    <div class="fr">
      <%= admin_create_button('调查答卷', :survey_user_sheet) %>
    </div>
    <%= = build_admin_navigation([@title] %>
  </div>
  <div class="cell">
    <table class="table">
      <thead>
        <tr>
          <th>序号</th>
          <th>调查问卷</th>
          <th>答卷时间</th>
          <th>操作</th>
        </tr>
      </thead>
      <% @survey_user_sheets.each_with_index do |survey_user_sheet, index| %>
        <tr>
          <td><%= index_no(index, @survey_user_sheets.size) %></td>
          <td><%= survey_user_sheet.survey.name %></td>
          <td><%= survey_user_sheet.created_at %></td>
          <td><%= link_to "修改" %>
              <%= link_to "删除" %>
          </td>
        </tr> 
      <% end -%>
    </table>
    <div class="inner">
      <%= paginate @survey_user_sheets %>
    </div>
  </div>
</div>
  .cell
    .fr
      = admin_create_button('创建新调查问卷', :survey)
    = build_admin_navigation([@title])
  .cell
    %table.table
      %thead
        %tr
          %th{:align => :right} 序号
          %th.w50{:align => :left} 名称
          %th 操作
      %tbody
        = render @surveys
  .inner{:align => :center}
    = paginate @surveys
